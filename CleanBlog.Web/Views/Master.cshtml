    <title>Clean Blog - Start Bootstrap Theme</title>
    @Html.RenderCssHere()
</head>
<body>
    @Html.RenderEditLink(Model)
    @Html.CachedPartial("~/Views/Partials/_Navigation.cshtml", Model, 3600, false)
